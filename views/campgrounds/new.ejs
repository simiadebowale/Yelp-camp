<% include ../partials/header %>
<div class="container">
    <div class="row">
    <h1 style="text-align: center;">Create new Campground</h1>
    <div style="width:30%; margin: 30px auto;">
<form action="/campgrounds" method="POST">
    <div class="form-group">
         <input class="form-control" type="text" name="name" placeholder="camp name">
    </div>
     <div class="form-group">
        <input class="form-control" type="text" name="image" placeholder="image url">
    </div>
    <div class="form-group">
        <textarea class="form-control" type="text" name="description" placeholder="add description"></textarea>
    </div>
        <div class="form-group">
             <button class="btn btn-lg btn-primary btn-block">Submit</button>
         </div>
</form>
<a href="/campgrounds">Go back</a>
</div>
</div>
</div>

